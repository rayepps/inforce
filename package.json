{
  "name": "inforce",
  "version": "0.0.9",
  "description": "A simple function based test runner",
  "main": "index.js",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rayepps/inforce.git"
  },
  "author": "rayepps",
  "license": "MIT",
  "private": false,
  "bin": {
    "inforce": "cli.js"
  },
  "bugs": {
    "url": "https://github.com/rayepps/inforce/issues"
  },
  "homepage": "https://github.com/rayepps/inforce#readme",
  "scripts": {
    "start": "node cli.js --targetPath . --level verbose",
    "test": "c8 node ./test.js",
    "lint": "eslint ./lib && eslint ./cli.js"
  },
  "c8": {
    "check-coverage": true,
    "lines": 100,
    "functions": 100,
    "branches": 100,
    "reporter": "html",
    "report-dir": ".coverage"
  },
  "keywords": [
    "test",
    "cli",
    "collection",
    "unit"
  ],
  "dependencies": {
    "chalk": "^4.0.0",
    "fs-extra": "^9.0.0",
    "minimist": "^1.2.5"
  },
  "devDependencies": {
    "c8": "^7.1.2",
    "chai": "^4.2.0",
    "eslint": "^7.1.0"
  }
}
